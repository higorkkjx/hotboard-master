<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <title><%= list.name %> - Contatos</title>
  <script>
    async function deleteContact(listName, chave, contact) {
      const response = await fetch(`/list/delete/${listName}/${chave}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ contact })
      });
      if (response.ok) {
        location.reload();
      } else {
        alert('Erro ao deletar contato');
      }
    }
  </script>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-4">
    <header class="bg-blue-500 text-white py-4 rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-center"><i class="fas fa-address-book"></i> <%= list.name %></h1>
    </header>
    <main class="mt-8 bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold mb-4">Contatos</h2>
      <ul class="space-y-4">
        <% if (list.contacts && list.contacts.length > 0) { %>
          <% list.contacts.forEach(contact => { %>
            <li class="flex items-center justify-between bg-gray-100 p-4 rounded-lg shadow">
              <div>
                <p class="font-bold text-lg"><i class="fas fa-phone-alt mr-2"></i><%= contact %></p>
              </div>
              <button onclick="deleteContact('<%= list.name %>', '<%= chave %>', '<%= contact %>')" class="text-red-500 hover:underline">
                <i class="fas fa-trash-alt"></i>
              </button>
            </li>
          <% }) %>
        <% } else { %>
          <p class="text-gray-700">Nenhum contato encontrado.</p>
        <% } %>
      </ul>
      <div class="mt-6 text-center">
        <a href="/add-contact/<%= chave %>" class="inline-block bg-green-500 text-white py-2 px-4 rounded shadow hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
          <i class="fas fa-plus"></i> Adicionar Contato
        </a>
      </div>
    </main>
    <footer class="bg-gray-200 text-gray-600 py-4 mt-8 rounded-lg shadow-md">
      <p class="text-center">Hotboard &copy; 2024</p>
    </footer>
  </div>
</body>
</html>
